FROM alpine:3.3

ENV BUILD_PACKAGES="ruby-dev build-base" \
    DEV_PACKAGES="zlib-dev libxml2-dev libxslt-dev tzdata yaml-dev sqlite-dev bash" \
    RUBY_PACKAGES="ruby ruby-io-console ruby-json yaml nodejs"

RUN apk --update --upgrade add $BUILD_PACKAGES $RUBY_PACKAGES $DEV_PACKAGES \
    && gem install -N bundler

WORKDIR /test

CMD ["sh", "a.sh"]
